<div>
    <% if flash[:error] %>
      <ul>
        <% flash[:error].each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    <% end %>
</div>

<%= form_for @user do |f| %>
  <%= f.text_field :username %>
  <%= f.collection_check_boxes :item_ids, @items, :id, :name %>
  <%= f.submit %>
<% end %>
